//- Contenedor para los botones en columna
div(class="fixed bottom-24 right-4 flex flex-col gap-4 items-center z-50")
    //- Botón de audio (si existe)
    if locals.audio
        button(
            type="button"
            class="bg-white rounded-full p-3 shadow-lg hover:shadow-xl transition-all duration-300 cursor-pointer group w-14 h-14 flex items-center justify-center"
            id="btnAudio"
            aria-label="Control de audio"
        )
            i(class="fas fa-volume-up text-[#FF6819] text-xl group-hover:scale-110 transition-transform duration-300")

    //- Botón de accesibilidad
    button(
        type="button"
        class="bg-white rounded-full p-3 shadow-lg hover:shadow-xl transition-all duration-300 cursor-pointer group w-14 h-14 flex items-center justify-center"
        id="btnAccesibilidad"
        aria-label="Menú de accesibilidad"
    )
        i(class="fas fa-text-height text-[#FF6819] text-xl group-hover:scale-110 transition-transform duration-300")

//- Menú desplegable de accesibilidad
div(
    class="fixed bottom-24 right-20 bg-white rounded-lg shadow-lg p-5 z-[9999] transform scale-0 opacity-0 transition-all duration-300 origin-top-right "
    id="menuAccesibilidad"
)
    h3(class="text-lg font-semibold text-gray-900 mb-4 flex items-center")
        i(class="fas fa-text-height text-[#FF6819] mr-2")
        | Tamaño de letra
    div(class="space-y-3")
        div(class="flex items-end gap-3")
            button(
                type="button"
                class="text-center w-10 h-5 rounded-lg transition-all duration-200 bg-gray-100 text-gray-700 hover:bg-gray-200 hover:shadow-md cursor-pointer flex items-center justify-center text-base font-medium bg-[#FF6819] text-white"
                data-size="0"
            ) A
            button(
                type="button"
                class="text-center w-10 h-7 rounded-lg transition-all duration-200 bg-gray-100 text-gray-700 hover:bg-gray-200 hover:shadow-md cursor-pointer flex items-center justify-center text-lg font-medium"
                data-size="1"
            ) A
            button(
                type="button"
                class="text-center w-10 h-9 rounded-lg transition-all duration-200 bg-gray-100 text-gray-700 hover:bg-gray-200 hover:shadow-md cursor-pointer flex items-center justify-center text-xl font-medium"
                data-size="2"
            ) A
            button(
                type="button"
                class="text-center w-10 h-10 rounded-lg transition-all duration-200 bg-gray-100 text-gray-700 hover:bg-gray-200 hover:shadow-md cursor-pointer flex items-center justify-center text-2xl font-medium"
                data-size="3"
            ) A 