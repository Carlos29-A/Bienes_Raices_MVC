//- Navegación Principal
nav(class="bg-gradient-to-r from-[#1E2939] to-[#101828] shadow-lg")
    div(class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8")
        //- Barra superior con logo y menú
        div(class="flex items-center justify-between h-16")
            //- Logo
            a(href="/auth/comprador/panel" class="flex items-center space-x-3")
                img(src="/img/logo.png" alt="Logo" class="w-15 h-10")
                span(class="text-white text-xl font-bold") InmoElegante
            
            //- Menú principal
            div(class="hidden md:flex items-center space-x-8")
                a(href="/auth/comprador/panel" class=`${ruta === "/auth/comprador/panel" ? "text-[#FF6819]" : "text-white"} font-medium hover:text-[#FF6819] transition-colors duration-200 flex items-center`)
                    i(class="fas fa-home mr-2")
                    span Inicio
                a(href="/mensajes/obtener/comprador" class=`${ruta === "/mensajes/obtener/comprador" ? "text-[#FF6819]" : "text-white"} font-medium hover:text-[#FF6819] transition-colors duration-200 flex items-center`)
                    div(id="icono-mensajes" class="relative")
                        i(class="fas fa-envelope mr-2")
                    span Mensajes
                a(href="/auth/editar-perfil" class=`${ruta === "/auth/editar-perfil" ? "text-[#FF6819]" : "text-white"} font-medium hover:text-[#FF6819] transition-colors duration-200 flex items-center`)
                    i(class="fas fa-user mr-2")
                    span Mi Perfil
                a(href="/propiedades/buscar" class=`${ruta === "/propiedades/buscar" ? "text-[#FF6819]" : "text-white"} font-medium hover:text-[#FF6819] transition-colors duration-200 flex items-center`)
                    i(class="fas fa-search mr-2")
                    span Buscar Propiedades
                a(href="/favoritos/propiedades-favoritas" class=`${ruta === "/favoritos/propiedades-favoritas" ? "text-[#FF6819]" : "text-white"} font-medium hover:text-[#FF6819] transition-colors duration-200 flex items-center`)
                    i(class="fas fa-heart mr-2")
                    span Favoritos
                a(href="/auth/cerrar-sesion" class="text-white font-medium hover:text-white transition-colors duration-200 flex items-center hover:bg-red-500 p-2 rounded-md")
                    i(class="fas fa-sign-out-alt mr-2")
                    span Cerrar Sesión

        //- Categorías de propiedades
        div(class="py-4 border-t border-gray-700")
            div(class="flex flex-wrap justify-center gap-6")
                each categoria in categorias
                    if ruta === '/propiedades/categorias/' + categoria.id
                        a(href=`/propiedades/categorias/${categoria.id}` class="text-[#FF6819] font-medium hover:text-[#FF6819] transition-colors duration-200 flex items-center")= categoria.nombre
                    else
                        a(href=`/propiedades/categorias/${categoria.id}` class="text-white font-medium hover:text-[#FF6819] transition-colors duration-200 flex items-center")= categoria.nombre