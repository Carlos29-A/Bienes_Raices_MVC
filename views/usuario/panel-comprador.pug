extends ../layout/index.pug

block contenido
    div(class="min-h-screen flex")
        include ./comprador-Sidebar/compradorSidebar.pug

        //- Main Content
        div(class="flex-1")
            //- Top Navigation
            header(class="bg-white shadow")
                div(class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 flex justify-between items-center")
                    h1(class="text-3xl font-bold text-gray-900") Panel de Comprador
                    div(class="flex items-center space-x-4")
                        div(class="relative")
                            button(class="flex items-center space-x-2 text-gray-700 hover:text-gray-900")
                                img(class="h-8 w-8 rounded-full" src="https://ui-avatars.com/api/?name=Comprador&background=0D8ABC&color=fff" alt="Comprador")
                                span= usuario.nombre

                //- Favoritos
                div(class="bg-white shadow rounded-lg mb-8")
                    div(class="px-4 py-5 sm:px-6")
                        h3(class="text-lg leading-6 font-medium text-gray-900") Mis Favoritos
                    div(class="border-t border-gray-200")
                        div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6")
                            //- Propiedades
                            each propiedad in propiedadesFavoritas
                                div
                                    div(class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden")
                                        img(class="w-full h-48 object-cover hover:scale-105 transition-all duration-300" src=`/uploads/${propiedad.propiedadRelacion.imagen}` alt="Casa")
                                    div(class="p-4")
                                        h4(class="text-lg font-semibold text-gray-900")= propiedad.propiedadRelacion.titulo
                                        p(class="text-gray-600") $ #{propiedad.propiedadRelacion.precio}
                                        p(class="text-gray-500 text-sm mt-2") #{propiedad.propiedadRelacion.habitaciones} habitaciones • #{propiedad.propiedadRelacion.wc} baños • #{propiedad.propiedadRelacion.estacionamiento} estacionamientos
                                        div(class="mt-4 flex space-x-2")
                                            a(href=`/propiedades/${propiedad.propiedadRelacion.id}` class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 hover:scale-105 text-sm cursor-pointer transition-all duration-300 text-center")
                                                | Ver Detalles
                                            a(href=`/mensajes/enviar/${propiedad.propiedadRelacion.id}/${propiedad.propiedadRelacion.usuarioId}` class="flex-1 bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 hover:scale-105 text-sm cursor-pointer transition-all duration-300 text-center")
                                                | Contactar



