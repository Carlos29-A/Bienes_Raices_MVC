extends ../layout/index.pug

block contenido
    div(class="min-h-screen flex")
        include ./comprador-Sidebar/compradorSidebar.pug

        //- Main Content
        div(class="flex-1")
            //- Top Navigation
            header(class="bg-white shadow")
                div(class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 flex justify-between items-center")
                    h1(class="text-3xl font-bold text-gray-900") Panel de Comprador
                    div(class="flex items-center space-x-4")
                        div(class="relative")
                            button(class="flex items-center space-x-2 text-gray-700 hover:text-gray-900")
                                img(class="h-8 w-8 rounded-full" src="https://ui-avatars.com/api/?name=Comprador&background=0D8ABC&color=fff" alt="Comprador")
                                span= usuario.nombre

            //- Dashboard Content
            main(class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8")
                //- Search Bar
                div(class="bg-white shadow rounded-lg p-6 mb-8")
                    div(class="grid grid-cols-1 md:grid-cols-4 gap-4")
                        div
                            label(class="block text-sm font-medium text-gray-700" for="ubicacion") Ubicación
                            input#ubicacion(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="text" placeholder="Ciudad, Zona...")
                        div
                            label(class="block text-sm font-medium text-gray-700" for="tipo") Tipo
                            select#tipo(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500")
                                option Todos
                                option Casa
                                option Departamento
                                option Terreno
                                option Local Comercial
                        div
                            label(class="block text-sm font-medium text-gray-700" for="precio") Precio Máximo
                            input#precio(class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" type="number" placeholder="$")
                        div(class="flex items-end")
                            button(class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700")
                                i(class="fas fa-search mr-2")
                                | Buscar

                //- Favoritos
                div(class="bg-white shadow rounded-lg mb-8")
                    div(class="px-4 py-5 sm:px-6")
                        h3(class="text-lg leading-6 font-medium text-gray-900") Mis Favoritos
                    div(class="border-t border-gray-200")
                        div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6")
                            //- Propiedad 1
                            div(class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden")
                                div(class="relative")
                                    img(class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Casa")
                                    button(class="absolute top-2 right-2 text-red-500 hover:text-red-600")
                                        i(class="fas fa-heart")
                                div(class="p-4")
                                    h4(class="text-lg font-semibold text-gray-900") Casa Moderna
                                    p(class="text-gray-600") $350,000
                                    p(class="text-gray-500 text-sm mt-2") 3 habitaciones • 2 baños • 200m²
                                    div(class="mt-4 flex space-x-2")
                                        button(class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 text-sm")
                                            | Ver Detalles
                                        button(class="flex-1 bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 text-sm")
                                            | Contactar

                            //- Propiedad 2
                            div(class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden")
                                div(class="relative")
                                    img(class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Departamento")
                                    button(class="absolute top-2 right-2 text-red-500 hover:text-red-600")
                                        i(class="fas fa-heart")
                                div(class="p-4")
                                    h4(class="text-lg font-semibold text-gray-900") Departamento Centro
                                    p(class="text-gray-600") $250,000
                                    p(class="text-gray-500 text-sm mt-2") 2 habitaciones • 2 baños • 120m²
                                    div(class="mt-4 flex space-x-2")
                                        button(class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 text-sm")
                                            | Ver Detalles
                                        button(class="flex-1 bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 text-sm")
                                            | Contactar

                //- Historial de Visitas
                div(class="bg-white shadow rounded-lg")
                    div(class="px-4 py-5 sm:px-6")
                        h3(class="text-lg leading-6 font-medium text-gray-900") Historial de Visitas
                    div(class="border-t border-gray-200")
                        ul(class="divide-y divide-gray-200")
                            li(class="px-4 py-4")
                                div(class="flex items-center space-x-4")
                                    img(class="h-16 w-16 object-cover rounded-lg" src="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Casa")
                                    div(class="flex-1 min-w-0")
                                        p(class="text-sm font-medium text-gray-900")
                                            | Casa Moderna
                                        p(class="text-sm text-gray-500")
                                            | Visitada el 15 de Marzo, 2024
                                        div(class="mt-1")
                                            span(class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800")
                                                i(class="fas fa-star text-yellow-400 mr-1")
                                                | 4.5
                                    button(class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 text-sm")
                                        | Ver Detalles
                            li(class="px-4 py-4")
                                div(class="flex items-center space-x-4")
                                    img(class="h-16 w-16 object-cover rounded-lg" src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Departamento")
                                    div(class="flex-1 min-w-0")
                                        p(class="text-sm font-medium text-gray-900")
                                            | Departamento Centro
                                        p(class="text-sm text-gray-500")
                                            | Visitada el 10 de Marzo, 2024
                                        div(class="mt-1")
                                            span(class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800")
                                                i(class="fas fa-star text-yellow-400 mr-1")
                                                | 4.0
                                    button(class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 text-sm")
                                        | Ver Detalles

