extends ../layout/index.pug

block contenido
    div(class="min-h-screen bg-gray-100 flex")
        include ./Administrador-Sidebar/administradorSidebar.pug

        //- Contenido Principal
        div(class="flex-1 p-8")
            //- Encabezado
            header(class="mb-8")
                h1(class="text-3xl font-bold text-gray-900") Panel de Control
                p(class="text-gray-600 mt-2") Bienvenido al panel de administración de Bienes Raíces

            //- Tarjetas de Estadísticas
            div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8")
                //- Total de Usuarios
                div(class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300")
                    div(class="flex items-center justify-between")
                        div
                            p(class="text-sm font-medium text-gray-600") Total Usuarios
                            h3(class="text-2xl font-bold text-gray-900 mt-1")= usuarios.length
                        div(class="bg-blue-100 p-3 rounded-lg")
                            i(class="fas fa-users text-2xl text-blue-600")

                //- Propiedades Activas
                div(class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300")
                    div(class="flex items-center justify-between")
                        div
                            p(class="text-sm font-medium text-gray-600") Propiedades Activas
                            h3(class="text-2xl font-bold text-gray-900 mt-1")= propiedadesActivas
                        div(class="bg-green-100 p-3 rounded-lg")
                            i(class="fas fa-home text-2xl text-green-600")


                //- Vendedores
                div(class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300")
                    div(class="flex items-center justify-between")
                        div
                            p(class="text-sm font-medium text-gray-600") Vendedores
                            h3(class="text-2xl font-bold text-gray-900 mt-1")= vendedores.length
                        div(class="bg-purple-100 p-3 rounded-lg")
                            i(class="fas fa-user-tie text-2xl text-purple-600")

                //- Compradores
                div(class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300")
                    div(class="flex items-center justify-between")
                        div
                            p(class="text-sm font-medium text-gray-600") Compradores
                            h3(class="text-2xl font-bold text-gray-900 mt-1")= compradores.length
                        div(class="bg-yellow-100 p-3 rounded-lg")
                            i(class="fas fa-user text-2xl text-yellow-600")

            //- Sección de Actividad Reciente
            div(class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8")
                //- Últimos Vendedores Registrados
                div(class="bg-white rounded-xl shadow-lg p-6")
                    h2(class="text-xl font-bold text-gray-900 mb-4") Últimos Vendedores
                    div(class="space-y-4")
                        each vendedor in vendedores
                            div(class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200")
                                div(class="flex items-center space-x-4")
                                    div(class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center")
                                        i(class="fas fa-user-tie text-purple-600")
                                    div
                                        p(class="font-medium text-gray-900")= vendedor.nombre
                                        p(class="text-sm text-gray-500")= vendedor.email

                //- Últimos Compradores Registrados
                div(class="bg-white rounded-xl shadow-lg p-6")
                    h2(class="text-xl font-bold text-gray-900 mb-4") Últimos Compradores
                    div(class="space-y-4")
                        each comprador in compradores
                            div(class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200")
                                div(class="flex items-center space-x-4")
                                    div(class="w-10 h-10 rounded-full bg-yellow-100 flex items-center justify-center")
                                        i(class="fas fa-user text-yellow-600")
                                    div
                                        p(class="font-medium text-gray-900")= comprador.nombre
                                        p(class="text-sm text-gray-500")= comprador.email

            //- Sección de Propiedades Destacadas
            div(class="bg-white rounded-xl shadow-lg p-6 mb-8")
                h2(class="text-xl font-bold text-gray-900 mb-4") Propiedades Destacadas
                div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6")
                    each propiedad in propiedades
                        div(class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-md transition-shadow duration-200")
                            img(
                                src=`/uploads/${propiedad.imagen}`
                                alt=`Propiedad ${propiedad.titulo}`
                                class="w-full h-48 object-cover"
                            )
                            div(class="p-4")
                                h3(class="font-semibold text-gray-900")= propiedad.titulo
                                p(class="text-gray-600 text-sm mb-2")= propiedad.categoriaRelacion.nombre
                                div(class="flex justify-between items-center")
                                    p(class="text-blue-600 font-bold") $#{propiedad.precio}
                                    span(class="text-sm text-gray-500")= propiedad.usuarioRelacion.nombre

block scripts
