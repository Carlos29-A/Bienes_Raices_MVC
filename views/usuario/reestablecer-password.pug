extends ../layout/index.pug

block contenido
    div(class="min-h-screen bg-gray-50 py-12 flex flex-col justify-center sm:py-16")
        div(class="py-3 sm:max-w-md sm:mx-auto w-full px-4 sm:px-0")
            div(class="px-4 py-8 bg-white shadow-sm sm:rounded-lg sm:p-12 w-full")
                h2(class="text-2xl font-bold text-center text-gray-900 mb-8") Reestablecer Contraseña
                if errores && errores.length > 0
                    div(class="mt-6 text-center space-y-4")
                        each error in errores
                            p(class="text-red-500 text-sm")= error.msg

                form(action="" method="POST" class="space-y-6" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    
                    // Campo para el token
                    input(type="hidden" name="token" value=token)
                    
                    // Nueva Contraseña
                    div
                        label(for="password" class="block text-sm font-medium text-gray-700 mb-2") Nueva Contraseña
                        div(class="relative")
                            input(
                                type="password" 
                                id="password" 
                                name="password" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                placeholder="Tu nueva contraseña"
                            )
                            div(class="absolute inset-y-0 right-0 pr-3 flex items-center")
                                i(class="fas fa-lock text-gray-400")
                    
                    // Confirmar Contraseña
                    div
                        label(for="password2" class="block text-sm font-medium text-gray-700 mb-2") Confirmar Contraseña
                        div(class="relative")
                            input(
                                type="password" 
                                id="password2" 
                                name="password2" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                placeholder="Repite tu nueva contraseña"
                            )
                            div(class="absolute inset-y-0 right-0 pr-3 flex items-center")
                                i(class="fas fa-lock text-gray-400")
                    
                    // Mensaje de requisitos de contraseña
                    div(class="bg-blue-50 p-4 rounded-md")
                        p(class="text-sm text-blue-700 font-medium mb-2") La contraseña debe cumplir con:
                        ul(class="text-sm text-blue-600 list-disc list-inside space-y-1")
                            li Mínimo 6 caracteres
                            li Al menos una letra mayúscula
                            li Al menos una letra minúscula
                            li Al menos un número
                    
                    // Botón de envío
                    div
                        button(
                            type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
                        )
                            i(class="fas fa-key mr-2")
                            | Reestablecer Contraseña
                    
                    
