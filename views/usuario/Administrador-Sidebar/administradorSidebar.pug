aside(class="w-64 bg-white border-r border-gray-200 min-h-screen flex-shrink-0 relative")
    //- Logo y Título
    div(class="p-6 border-b border-gray-200")
        div(class="flex items-center space-x-3")
            div(class="bg-[#FF6F17] p-2 rounded-lg shadow-sm")
                i(class="fas fa-user-shield text-2xl text-white")
            div
                h2(class="text-xl font-bold text-[#FF6F17]") Panel Admin
                p(class="text-xs text-gray-500") Bienvenido al sistema

    //- Menú de Navegación
    nav(class="p-4 space-y-1")
        //- Inicio
        a(
            href="/auth/administrador/panel"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-orange-50 hover:text-[#FF6F17] transition-colors duration-200 group"
        )
            div(class="bg-orange-50 p-2 rounded-lg group-hover:bg-[#FF6F17] group-hover:text-white transition-colors duration-200")
                i(class="fas fa-home text-lg")
            span(class="font-medium") Inicio

        //- Usuarios
        a(
            href="/auth/administrador/usuarios"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-orange-50 hover:text-[#FF6F17] transition-colors duration-200 group"
        )
            div(class="bg-orange-50 p-2 rounded-lg group-hover:bg-[#FF6F17] group-hover:text-white transition-colors duration-200")
                i(class="fas fa-users text-lg")
            span(class="font-medium") Usuarios
            span(class="ml-auto bg-orange-100 text-[#FF6F17] text-xs font-medium px-2 py-0.5 rounded-full")= usuarios.length

        //- Propiedades
        a(
            href="/auth/administrador/propiedades"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-orange-50 hover:text-[#FF6F17] transition-colors duration-200 group"
        )
            div(class="bg-orange-50 p-2 rounded-lg group-hover:bg-[#FF6F17] group-hover:text-white transition-colors duration-200")
                i(class="fas fa-building text-lg")
            span(class="font-medium") Propiedades
            span(class="ml-auto bg-orange-100 text-[#FF6F17] text-xs font-medium px-2 py-0.5 rounded-full")= propiedades.length

        //- Mensajes
        a(
            href="/auth/administrador/mensajes"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-orange-50 hover:text-[#FF6F17] transition-colors duration-200 group"
        )
            div(class="bg-orange-50 p-2 rounded-lg group-hover:bg-[#FF6F17] group-hover:text-white transition-colors duration-200")
                i(class="fas fa-envelope text-lg")
            span(class="font-medium") Mensajes
            span(class="ml-auto bg-orange-100 text-[#FF6F17] text-xs font-medium px-2 py-0.5 rounded-full")= mensajes.length

        //- Perfil
        a(
            href="/auth/administrador/perfil"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-orange-50 hover:text-[#FF6F17] transition-colors duration-200 group"
        )
            div(class="bg-orange-50 p-2 rounded-lg group-hover:bg-[#FF6F17] group-hover:text-white transition-colors duration-200")
                i(class="fas fa-user-cog text-lg")
            span(class="font-medium") Perfil

        //- Separador
        div(class="my-4 border-t border-gray-200")

        //- Cerrar Sesión
        a(
            href="/auth/cerrar-sesion"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-red-50 hover:text-red-600 transition-colors duration-200 group"
        )
            div(class="bg-red-50 p-2 rounded-lg group-hover:bg-red-600 group-hover:text-white transition-colors duration-200")
                i(class="fas fa-sign-out-alt text-lg")
            span(class="font-medium") Cerrar Sesión

    //- Información del Administrador
    div(class="absolute bottom-0 w-64 p-4 border-t border-gray-200 bg-gray-50")
        div(class="flex items-center space-x-3")
            div(class="w-10 h-10 rounded-full bg-[#FF6F17] flex items-center justify-center text-white")
                i(class="fas fa-user")
            div(class="flex-1 min-w-0")
                p(class="text-sm font-medium text-gray-900 truncate")= usuario.nombre
                p(class="text-xs text-gray-500 truncate")= usuario.email

    //- Versión del Sistema
    div(class="absolute bottom-0 w-64 p-2 text-center text-xs text-gray-500 bg-gray-50 border-t border-gray-200")
        p Sistema v1.0.0
