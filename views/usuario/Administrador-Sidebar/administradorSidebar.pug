aside(class="w-64 bg-white border-r border-gray-200 min-h-screen flex-shrink-0")
    //- Logo y Título
    div(class="p-6 border-b border-gray-200")
        div(class="flex items-center space-x-3")
            div(class="bg-blue-600 p-2 rounded-lg")
                i(class="fas fa-user-shield text-2xl text-white")
            h2(class="text-xl font-bold text-gray-900") Panel Admin

    //- Menú de Navegación
    nav(class="p-4 space-y-2")
        //- Inicio
        a(
            href="/auth/administrador/panel"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200 group"
        )
            div(class="bg-gray-100 p-2 rounded-lg group-hover:bg-blue-100 transition-colors duration-200")
                i(class="fas fa-home text-lg")
            span(class="font-medium") Inicio

        //- Usuarios
        a(
            href="/auth/administrador/usuarios"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200 group"
        )
            div(class="bg-gray-100 p-2 rounded-lg group-hover:bg-blue-100 transition-colors duration-200")
                i(class="fas fa-users text-lg")
            span(class="font-medium") Usuarios
            span(class="ml-auto bg-blue-100 text-blue-600 text-xs font-medium px-2 py-0.5 rounded-full")= usuarios.length

        //- Propiedades
        a(
            href="/auth/administrador/propiedades"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200 group"
        )
            div(class="bg-gray-100 p-2 rounded-lg group-hover:bg-blue-100 transition-colors duration-200")
                i(class="fas fa-building text-lg")
            span(class="font-medium") Propiedades
            span(class="ml-auto bg-green-100 text-green-600 text-xs font-medium px-2 py-0.5 rounded-full")= propiedades.length

        //- Mensajes
        a(
            href="/auth/administrador/mensajes"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200 group"
        )
            div(class="bg-gray-100 p-2 rounded-lg group-hover:bg-blue-100 transition-colors duration-200")
                i(class="fas fa-envelope text-lg")
            span(class="font-medium") Mensajes
            span(class="ml-auto bg-red-100 text-red-600 text-xs font-medium px-2 py-0.5 rounded-full")= mensajes.length

        //- Perfil
        a(
            href="/auth/administrador/perfil"
            class="flex items-center space-x-3 px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200 group"
        )
            div(class="bg-gray-100 p-2 rounded-lg group-hover:bg-blue-100 transition-colors duration-200")
                i(class="fas fa-user-cog text-lg")
            span(class="font-medium") Perfil

    //- Información del Administrador
    div(class="absolute bottom-0 w-64 p-4 border-t border-gray-200")
        div(class="flex items-center space-x-3")
            div(class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center")
                i(class="fas fa-user text-blue-600")
            div(class="flex-1 min-w-0")
                p(class="text-sm font-medium text-gray-900 truncate")= usuario.nombre
                p(class="text-xs text-gray-500 truncate")= usuario.email

    //- Versión del Sistema
    div(class="absolute bottom-0 w-64 p-2 text-center text-xs text-gray-500")
        p Sistema v1.0.0
