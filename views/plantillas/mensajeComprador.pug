extends ../layout/index.pug

block contenido
    div(class="min-h-screen bg-gray-100 flex")
        include ../usuario/comprador-Sidebar/compradorSidebar.pug

        //- Contenido Principal
        div(class="flex-1 flex items-center justify-center p-8")
            //- Tarjeta de Mensaje
            div(class="w-full max-w-lg")
                div(class="bg-white rounded-xl shadow-2xl overflow-hidden transform transition-all duration-300 hover:scale-[1.02]")
                    //- Encabezado con Icono
                    div(class="px-8 pt-8 pb-6")
                        //- Icono según el tipo de mensaje
                        if tipo === 'error'
                            div(class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-6 transform transition-all duration-300 hover:scale-110")
                                i(class="fas fa-exclamation-circle text-3xl text-red-600")
                        else if tipo === 'exito'
                            div(class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6 transform transition-all duration-300 hover:scale-110")
                                i(class="fas fa-check-circle text-3xl text-green-600")
                        else
                            div(class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 mb-6 transform transition-all duration-300 hover:scale-110")
                                i(class="fas fa-info-circle text-3xl text-blue-600")
                        
                        //- Título del mensaje
                        h2(class="text-2xl font-bold text-gray-900 mb-3 text-center")= titulo || 'Mensaje'
                        
                        //- Línea decorativa
                        div(class="w-20 h-1 bg-gradient-to-r from-blue-500 to-blue-600 mx-auto rounded-full mb-6")
                    
                    //- Contenido del mensaje
                    div(class="px-8 pb-8")
                        p(class="text-gray-600 text-lg leading-relaxed text-center mb-8")= mensaje
                        
                        //- Botón de acción
                        if url
                            div(class="text-center")
                                a(
                                    href=url
                                    class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-lg shadow-md hover:from-blue-700 hover:to-blue-800 transform transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                                )
                                    if tipo === 'exito'
                                        i(class="fas fa-check mr-2")
                                    else if tipo === 'error'
                                        i(class="fas fa-arrow-left mr-2")
                                    else
                                        i(class="fas fa-arrow-right mr-2")
                                    = boton || 'Continuar'

block scripts
    script.
        // Efecto de aparición suave
        document.addEventListener('DOMContentLoaded', () => {
            const card = document.querySelector('.bg-white')
            card.style.opacity = '0'
            card.style.transform = 'translateY(20px)'
            
            setTimeout(() => {
                card.style.transition = 'all 0.5s ease-out'
                card.style.opacity = '1'
                card.style.transform = 'translateY(0)'
            }, 100)
        })
