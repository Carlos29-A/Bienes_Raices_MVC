doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="csrf-token" content=csrfToken)
        title Bienes Raíces | #{pagina}
        link(rel="stylesheet", href="/css/app.css")
        link(rel="stylesheet", href="/font/poppins/poppins.css")
        link(rel="stylesheet", href="/icons/fontawesome/css/all.min.css")
        block styles
    body.min-h-screen.bg-gray-50
        include ../partials/accesibilidad.pug

        include ../partials/audio.pug

        block contenido

        //- Incluir el chatbot
        include ../partials/chatbot.pug

        //- Scripts
        script(src="/js/accesibilidad.js")
        script(src="/js/audio.js")
        script(src="/js/notificaciones.js")
        
        //- Configuración del chatbot
        script.
            // Establecer la API key como una propiedad del objeto window
            Object.defineProperty(window, 'OPENROUTER_API_KEY', {
                value: !{JSON.stringify(openrouterKey || '')},
                writable: false,
                configurable: false
            });
            console.log('OPENROUTER_API_KEY desde el layout:', window.OPENROUTER_API_KEY)
        
        script(src="/js/chatBot.js")
        
        block scripts